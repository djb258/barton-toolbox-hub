# ==========================================
# Validator Tool Environment Configuration
# ==========================================
# Copy this file to .env and fill in your values

# ==========================================
# SCHEMAS CONFIGURATION
# ==========================================
# Path to validation schemas directory
# Default: ./backend/tools/validator/schemas
VALIDATOR_SCHEMAS_DIR=./backend/tools/validator/schemas

# ==========================================
# VALIDATION SETTINGS
# ==========================================
# Strict mode: treat warnings as errors
VALIDATOR_STRICT_MODE=false

# Enable detailed error messages
VALIDATOR_VERBOSE_ERRORS=true

# Default schema to use if none specified
VALIDATOR_DEFAULT_SCHEMA=document_basic

# ==========================================
# LOGGING
# ==========================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (optional)
LOG_FILE_PATH=./logs/validator.log

# ==========================================
# CORS (for frontend integration)
# ==========================================
# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080

# ==========================================
# SERVER CONFIGURATION
# ==========================================
# Server host
HOST=0.0.0.0

# Server port (if running standalone)
PORT=8000

# Environment: development, staging, production
ENVIRONMENT=development

# ==========================================
# FEATURE FLAGS
# ==========================================
# Enable batch validation endpoint
ENABLE_BATCH_VALIDATION=true

# Enable schema caching
ENABLE_SCHEMA_CACHING=true

# Cache TTL in seconds
SCHEMA_CACHE_TTL=3600

# ==========================================
# PERFORMANCE
# ==========================================
# Maximum fields per validation request
MAX_FIELDS_PER_REQUEST=1000

# Maximum batch size for batch validation
MAX_BATCH_SIZE=100

# Validation timeout (seconds)
VALIDATION_TIMEOUT=30

# ==========================================
# MONITORING & OBSERVABILITY
# ==========================================
# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# Application metrics endpoint (optional)
METRICS_ENDPOINT=

# Enable validation statistics tracking
ENABLE_STATISTICS=true
