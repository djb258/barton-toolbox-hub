# ==========================================
# Logger Tool Environment Configuration
# ==========================================
# Copy this file to .env and fill in your values

# ==========================================
# NEON (PostgreSQL Database) - PRIMARY
# ==========================================
# Connection URL for Neon PostgreSQL database
# Format: postgresql://username:password@host/database?sslmode=require
# Used for: Primary event log storage
NEON_URL=postgresql://username:password@ep-example-123.us-east-2.aws.neon.tech/neondb?sslmode=require

# ==========================================
# FIREBASE (Firestore) - FAILOVER
# ==========================================
# Path to Firebase service account credentials JSON file
# Used for: Backup storage when Neon is unavailable
# Download from: Firebase Console > Project Settings > Service Accounts
FIREBASE_CREDENTIALS=/path/to/firebase-credentials.json

# ==========================================
# STORAGE BACKEND CONFIGURATION
# ==========================================
# Enable Neon (PostgreSQL) storage
ENABLE_NEON=true

# Enable Firebase (Firestore) failover
ENABLE_FIREBASE=false

# ==========================================
# LOGGING CONFIGURATION
# ==========================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (optional)
LOG_FILE_PATH=./logs/logger.log

# ==========================================
# EVENT RETENTION
# ==========================================
# Days to retain events before cleanup (0 = never delete)
EVENT_RETENTION_DAYS=90

# Enable automatic cleanup
AUTO_CLEANUP_ENABLED=false

# Cleanup schedule (cron format)
CLEANUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# ==========================================
# PERFORMANCE SETTINGS
# ==========================================
# Database connection pool size
DB_POOL_MIN_SIZE=1
DB_POOL_MAX_SIZE=10

# Query timeout (seconds)
QUERY_TIMEOUT=30

# Maximum events per request
MAX_EVENTS_PER_REQUEST=1000

# Maximum batch size for batch logging
MAX_BATCH_SIZE=100

# ==========================================
# CORS (for frontend integration)
# ==========================================
# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080

# ==========================================
# SERVER CONFIGURATION
# ==========================================
# Server host
HOST=0.0.0.0

# Server port (if running standalone)
PORT=8000

# Environment: development, staging, production
ENVIRONMENT=development

# ==========================================
# MONITORING & OBSERVABILITY
# ==========================================
# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# Application metrics endpoint (optional)
METRICS_ENDPOINT=

# Enable event statistics tracking
ENABLE_STATISTICS=true
